    
    <!-- Descrption for the Waiter Demostration -->
    
<application>
<name>waiter_english_App</name>

    <module>
        <name>wtrDialogue</name>
        <parameters>--language spanish</parameters>
        <node>localhost</node>
    </module>


    <module>
        <name>wtrHead</name>
        <node>/manipulation</node>
    </module>
    <connection>
        <from>/wtrDialogue/command:o</from>
        <to>/wtrHead/dialogue/command:i</to>
    </connection>
    

    <module>
        <name>wtrArms</name>
        <node>/manipulation</node>
    </module>
    <connection>
        <from>/wtrDialogue/command:o</from>
        <to>/wtrArms/dialogue/command:i</to>
    </connection>


    <module>
        <name>cvBottle</name>
        <parameters>--kinectDevice OpenNI2DeviceClient --kinectLocal /cvBottle --algorithm redMinusGreen --maxNumBlobs 1 --outFeatures "(pxXpos pxYpos mmZ)" --outFeaturesFormat 1 --outImage 0 --seeBounding 1</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/cvBottle/state:o</from>
        <to>/wtrHead/cvBottle/state:i</to>
    </connection>


    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/cvBottle/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/cvBottle/img:o</from>
        <to>/yarpview/cvBottle/img:i</to>
    </connection>


    <connection>
        <from>/speechRecognition:o</from>
        <to>/wtrDialogue/speechRecognition:i</to>
    </connection>

    <connection>
        <from>/wtrDialogue/tts/rpc:c</from>
        <to>/tts/rpc:s</to>
    </connection>

</application>

