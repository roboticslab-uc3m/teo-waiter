    
    <!-- Descrption for the Waiter Demostration -->
    
<application>
<name>waiter App</name>

    <module>
        <name>waiterDialogueManager</name>
        <node>localhost</node>
    </module>


    <module>
        <name>waiterExecHead</name>
        <node>/manipulation</node>
    </module>
    <connection>
        <from>/waiterDialMan/Head/command:o</from>
        <to>/waiterExecHead/DialogueManager/command:i</to>
    </connection>
    

    <module>
        <name>waiterExecManip</name>
        <node>/manipulation</node>
    </module>
    <connection>
        <from>/waiterDialMan/Manip/command:o</from>
        <to>/waiterExecManip/DialogueManager/command:i</to>
    </connection>


    <module>
        <name>cvBottle</name>
        <parameters>--algorithm redMinusGreen --maxNumBlobs 1 --outFeatures "(pxXpos pxYpos mmZ)" --outFeaturesFormat 1 --outImage 0 --seeBounding 1</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/cvBottle/state:o</from>
        <to>/waiterExecHead/cvBottle/state:i</to>
    </connection>
    <connection>
        <from>/cvBottle/state:o</from>
        <to>/waiterExecManip/cvBottle/state:i</to>
    </connection>    


    <module>
        <name>yarpview</name>
        <parameters>--name /yarpview/cvBottle/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/cvBottle/img:o</from>
        <to>/yarpview/cvBottle/img:i</to>
    </connection>


    <connection>
        <from>/speechRecognition:o</from>
        <to>/waiterDialMan/speechRecognition:i</to>
    </connection>

    <connection>
        <from>/waiterDialMan/iSpeak:o</from>
        <to>/icub/speech:rpc</to>
    </connection>

</application>

